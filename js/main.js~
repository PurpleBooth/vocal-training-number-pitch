(function ($) {
    "use strict";

    function NumberGeneration() {
        var self = {};
        var currentNumber = 1;

        self.init = function () {
            self.setChangeInterval();
        };

        self.setChangeInterval = function () {
            setInterval(self.changeText, 3000);
        };

        self.changeText = function () {
            var up = Math.round(Math.random()) == 1;

            $('body').text(currentNumber + " " + (up ? "UP" : "DOWN"));

            if (currentNumber < 10) {
                currentNumber++;
            }
            else {
                currentNumber = 1;
            }

        };

        return self;
    }

    window.numberGeneration = new NumberGeneration();
    numberGeneration.init();
})(jQuery);

